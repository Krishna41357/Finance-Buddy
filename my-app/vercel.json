{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    
    { "source": "/(.*\\..+)", "destination": "/$1" },
 
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "font-src 'self' data: *.vercel.com *.gstatic.com vercel.live; style-src 'self' 'unsafe-inline'; script-src 'self';"
        }
      ]
    }
  ]
}
